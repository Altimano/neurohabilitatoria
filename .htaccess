RewriteEngine On
RewriteBase /neurohabilitatoria/

# Permitir acceso directo a assets
RewriteCond %{REQUEST_URI} ^/neurohabilitatoria/(assets|css|js|images|uploads)/
RewriteRule ^(.*)$ - [L]

# Redirigir todo lo dem√°s al index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]